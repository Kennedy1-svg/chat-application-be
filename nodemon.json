{
  "watch": [".", ".env"],
  "ignore": ["node_modules/", "temp/", "logs/", "uploads/", "coverage/", "*.test.js", "*.spec.js"],
  "ext": "js,json,env",
  "delay": 1000,
  "env": {
    "NODE_ENV": "development"
  },
  "exec": "node app.js",
  "restartable": "rs",
  "verbose": true,
  "colours": true,
  "events": {
    "start": "echo 'ðŸš€ Starting development server...'",
    "crash": "echo 'ðŸ’¥ Server crashed - waiting for file changes before restart'",
    "restart": "echo 'ðŸ”„ Restarting server due to file changes...'"
  }
}
